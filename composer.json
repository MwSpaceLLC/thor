{
  "name": "mwspace/thor",
  "type": "project",
  "description": "Make easy develop addon for WHMCS marketplace ðŸ˜±",
  "keywords": [
    "whmcs",
    "whmcs addon",
    "whmcs module"
  ],
  "license": "MIT",
  "require": {
    "php": ">=5.6",
    "mwspace/thor-core": "^1.5"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "prefer-stable": true,
  "scripts": {
    "post-root-package-install": [
      "@php -r \"rename(__DIR__.'/whmcs_addon.php',__DIR__.'/'.basename(__DIR__).'.php');\""
    ]
  }
}
